{
  "name": "regex-ts",
  "version": "1.0.0",
  "description": "A mini regexp engine implemented in Typescript",
  "main": "index.js",
  "scripts": {
    "start": "ts-node src/index.ts",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "typecheck": "tsc --noEmit",
    "test:format": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "test:unit": "ava \"src/**/*.test.ts\"",
    "test": "npm run test:format"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "ts-node": "^8.9.1",
    "typescript": "^3.8.3"
  },
  "devDependencies": {
    "ava": "^3.7.1",
    "husky": "^4.2.5",
    "lint-staged": "^10.1.7",
    "prettier": "^2.0.5"
  }
}
